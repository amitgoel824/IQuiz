<html>
<head>
</head>

<body>

    <h1><%= Category.find(@category_id).name %> Quiz</h1>


    <form action = "/quizzes/answers" method="POST">

        <h3>10 points each</h3>
        <h2>Part-1 </h2>

        <% @questions1.each_with_index do |question, index| %>

        <p>Question<%= index + 1%>: <%= question.statement%> </p>
        <input type="radio" name= "ans<%= index + 1%>" value= 1 ><%= question.option1 %><br>
        <input type="radio" name= "ans<%= index + 1%>" value= 2 ><%= question.option2 %><br>
        <input type="radio" name= "ans<%= index + 1%>" value= 3 ><%= question.option3 %><br>
        <input type="radio" name= "ans<%= index + 1%>" value= 4 ><%= question.option4 %><br>
        <input type = "hidden" name="question_id<%=index+1%>" value = "<%= question.id %>" >
        <hr>

        <% end %>

        <h3>20 points each</h3>
        <h2>Part-2 </h2>

        <% @questions2.each_with_index do |question, index| %>

        <p>Question<%= index + 1+ @number_of_questions_part1 %>: <%= question.statement%> </p>
        <input type="radio" name= "ans<%= index + 1 + @number_of_questions_part1 %>" value= 1 ><%= question.option1 %><br>
        <input type="radio" name= "ans<%= index + 1 + @number_of_questions_part1 %>" value= 2 ><%= question.option2 %><br>
        <input type="radio" name= "ans<%= index + 1 + @number_of_questions_part1 %>" value= 3 ><%= question.option3 %><br>
        <input type="radio" name= "ans<%= index + 1 + @number_of_questions_part1 %>" value= 4 ><%= question.option4 %><br>
        <input type = "hidden" name="question_id<%=index+1 + @number_of_questions_part1%>" value = "<%= question.id %>" >
        <hr>

        <% end %>


        <input type = "hidden" name="category" value = "<%= @category_id %>" >
        <h2>
            <input class = "btn btn-primary"type="submit" value="View Answers">
        </h2>
    </form>

</body>
</html>
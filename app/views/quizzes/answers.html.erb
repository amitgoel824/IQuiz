<h1>Your Score is <%= @score %></h1>
<% if @change == 1 %>
	Congratulations! You made a New High Score
	<% end %> 

<h2>
	<form   action="/quizzes/questions" method="POST">
		<!-- <input type = "hidden" name="category" value = "<%= @category_id %>" > -->
	<button class = "btn btn-primary" type="submit" name="category" value="<%= @category_id %>">Play Again</button>
</form>
<br>
<form   action="/quizzes/category" >
	<button class = "btn btn-primary" >Change Category</button>
</form>
</h2>




<h2>Answers</h2>


<% @questions.each_with_index do |question, index| %>

	<p>Question<%= index + 1%>: <%= question.statement%> </p>
	<p>1) <%= question.option1 %></p>
	<p>2) <%= question.option2 %></p>
	<p>3) <%= question.option3 %></p>
	<p>4) <%= question.option4 %></p>
	<p>Answer: Option <%= question.answer %></p>
	<hr>

	<% end %>

